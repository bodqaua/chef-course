<Page x:Class="Chef.ViewModels.Recipe.RecipeAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chef.ViewModels.Recipe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecipeAdd">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <StackPanel Grid.Row="0" Margin="12">
                <Label>Название рецепта</Label>
                <TextBox />

                <Label>Калорийность</Label>
                <TextBox />


                <Label>Белки</Label>
                <TextBox />

                <Label>Жиры</Label>
                <TextBox />

                <Label>Углеводы</Label>
                <TextBox />

                <Label>Описание</Label>
                <RichTextBox MinHeight="80" MaxHeight="400" MaxWidth="300" HorizontalAlignment="Left" />

                <Label>Ингредиенты</Label>
                <ComboBox Name="IngredientsComboBox"
                          SelectedValuePath="Tag"
                          SelectionChanged="IngredientsComboBox_SelectionChanged" />
            </StackPanel>
        </ScrollViewer>
      
    </Grid>

 
